{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "The AWS CloudFormation template for this Serverless application",
  "Resources": {
    "ServerlessDeploymentBucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketEncryption": {
          "ServerSideEncryptionConfiguration": [
            {
              "ServerSideEncryptionByDefault": {
                "SSEAlgorithm": "AES256"
              }
            }
          ]
        }
      }
    },
    "ServerlessDeploymentBucketPolicy": {
      "Type": "AWS::S3::BucketPolicy",
      "Properties": {
        "Bucket": {
          "Ref": "ServerlessDeploymentBucket"
        },
        "PolicyDocument": {
          "Statement": [
            {
              "Action": "s3:*",
              "Effect": "Deny",
              "Principal": "*",
              "Resource": [
                {
                  "Fn::Join": [
                    "",
                    [
                      "arn:",
                      {
                        "Ref": "AWS::Partition"
                      },
                      ":s3:::",
                      {
                        "Ref": "ServerlessDeploymentBucket"
                      },
                      "/*"
                    ]
                  ]
                },
                {
                  "Fn::Join": [
                    "",
                    [
                      "arn:",
                      {
                        "Ref": "AWS::Partition"
                      },
                      ":s3:::",
                      {
                        "Ref": "ServerlessDeploymentBucket"
                      }
                    ]
                  ]
                }
              ],
              "Condition": {
                "Bool": {
                  "aws:SecureTransport": false
                }
              }
            }
          ]
        }
      }
    },
    "HolidayFetcherLogGroup": {
      "Type": "AWS::Logs::LogGroup",
      "Properties": {
        "LogGroupName": "/aws/lambda/holiday_fetcher"
      }
    },
    "HolidaySearcherLogGroup": {
      "Type": "AWS::Logs::LogGroup",
      "Properties": {
        "LogGroupName": "/aws/lambda/holiday_searcher"
      }
    },
    "IamRoleLambdaExecution": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "lambda.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": {
              "Fn::Join": [
                "-",
                [
                  "world-holidays",
                  "dev",
                  "lambda"
                ]
              ]
            },
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "logs:CreateLogStream",
                    "logs:CreateLogGroup"
                  ],
                  "Resource": [
                    {
                      "Fn::Sub": "arn:${AWS::Partition}:logs:${AWS::Region}:${AWS::AccountId}:log-group:/aws/lambda/holiday_fetcher:*"
                    },
                    {
                      "Fn::Sub": "arn:${AWS::Partition}:logs:${AWS::Region}:${AWS::AccountId}:log-group:/aws/lambda/holiday_searcher:*"
                    }
                  ]
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "logs:PutLogEvents"
                  ],
                  "Resource": [
                    {
                      "Fn::Sub": "arn:${AWS::Partition}:logs:${AWS::Region}:${AWS::AccountId}:log-group:/aws/lambda/holiday_fetcher:*:*"
                    },
                    {
                      "Fn::Sub": "arn:${AWS::Partition}:logs:${AWS::Region}:${AWS::AccountId}:log-group:/aws/lambda/holiday_searcher:*:*"
                    }
                  ]
                }
              ]
            }
          }
        ],
        "Path": "/",
        "RoleName": {
          "Fn::Join": [
            "-",
            [
              "world-holidays",
              "dev",
              {
                "Ref": "AWS::Region"
              },
              "lambdaRole"
            ]
          ]
        }
      }
    },
    "EnterpriseLogAccessIamRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "AWS": "arn:aws:iam::802587217904:root"
              },
              "Action": "sts:AssumeRole",
              "Condition": {
                "StringEquals": {
                  "sts:ExternalId": "ServerlessEnterprise-11b02d18-917d-4c95-ae96-24d1948171dc"
                }
              }
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": "LogFilterAccess",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "logs:FilterLogEvents"
                  ],
                  "Resource": [
                    {
                      "Fn::GetAtt": [
                        "HolidayFetcherLogGroup",
                        "Arn"
                      ]
                    },
                    {
                      "Fn::GetAtt": [
                        "HolidaySearcherLogGroup",
                        "Arn"
                      ]
                    }
                  ]
                }
              ]
            }
          }
        ]
      }
    },
    "HolidayFetcherLambdaFunction": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "Code": {
          "S3Bucket": {
            "Ref": "ServerlessDeploymentBucket"
          },
          "S3Key": "serverless/world-holidays/dev/1640229954384-2021-12-23T03:25:54.384Z/world-holidays.zip"
        },
        "Handler": "s_holidayFetcher.handler",
        "Runtime": "python3.8",
        "FunctionName": "holiday_fetcher",
        "MemorySize": 1024,
        "Timeout": 900,
        "Description": "Web scrapes holidays from a given URL and saves it to s3",
        "Environment": {
          "Variables": {
            "S3_BUCKET_NAME": "holiday-reminder-slack-bot",
            "S3_FOLDER_NAME": "holidays",
            "S3_FILE_NAME": "list_of_holidays_per_date.json"
          }
        },
        "Role": {
          "Fn::GetAtt": [
            "IamRoleLambdaExecution",
            "Arn"
          ]
        }
      },
      "DependsOn": [
        "HolidayFetcherLogGroup"
      ]
    },
    "HolidaySearcherLambdaFunction": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "Code": {
          "S3Bucket": {
            "Ref": "ServerlessDeploymentBucket"
          },
          "S3Key": "serverless/world-holidays/dev/1640229954384-2021-12-23T03:25:54.384Z/world-holidays.zip"
        },
        "Handler": "s_holidaySearcher.handler",
        "Runtime": "python3.8",
        "FunctionName": "holiday_searcher",
        "MemorySize": 1024,
        "Timeout": 900,
        "Description": "Reads the file from s3 and returns the holidays in all over the world for a given date",
        "Environment": {
          "Variables": {
            "S3_BUCKET_NAME": "holiday-reminder-slack-bot",
            "S3_FOLDER_NAME": "holidays",
            "S3_FILE_NAME": "list_of_holidays_per_date.json"
          }
        },
        "Role": {
          "Fn::GetAtt": [
            "IamRoleLambdaExecution",
            "Arn"
          ]
        }
      },
      "DependsOn": [
        "HolidaySearcherLogGroup"
      ]
    },
    "HolidayFetcherLambdaVersionyPK2vMk0BoTsaaaNi9BkCFdxMLKRERH8NlGN0rCRT2M": {
      "Type": "AWS::Lambda::Version",
      "DeletionPolicy": "Retain",
      "Properties": {
        "FunctionName": {
          "Ref": "HolidayFetcherLambdaFunction"
        },
        "CodeSha256": "ffiV4FV4TgbCn87WE9Hj1FW3uUUh6SoC/FoLGfQxOfU=",
        "Description": "Web scrapes holidays from a given URL and saves it to s3"
      }
    },
    "HolidaySearcherLambdaVersionqPLWjxR3fGivovq9woVfCqYPktNeZoumPDX2rqo": {
      "Type": "AWS::Lambda::Version",
      "DeletionPolicy": "Retain",
      "Properties": {
        "FunctionName": {
          "Ref": "HolidaySearcherLambdaFunction"
        },
        "CodeSha256": "ffiV4FV4TgbCn87WE9Hj1FW3uUUh6SoC/FoLGfQxOfU=",
        "Description": "Reads the file from s3 and returns the holidays in all over the world for a given date"
      }
    },
    "HolidayFetcherEventsRuleSchedule1": {
      "Type": "AWS::Events::Rule",
      "Properties": {
        "ScheduleExpression": "rate(364 days)",
        "State": "ENABLED",
        "Targets": [
          {
            "Arn": {
              "Fn::GetAtt": [
                "HolidayFetcherLambdaFunction",
                "Arn"
              ]
            },
            "Id": "holidayFetcherSchedule"
          }
        ]
      }
    },
    "HolidayFetcherLambdaPermissionEventsRuleSchedule1": {
      "Type": "AWS::Lambda::Permission",
      "Properties": {
        "FunctionName": {
          "Fn::GetAtt": [
            "HolidayFetcherLambdaFunction",
            "Arn"
          ]
        },
        "Action": "lambda:InvokeFunction",
        "Principal": "events.amazonaws.com",
        "SourceArn": {
          "Fn::GetAtt": [
            "HolidayFetcherEventsRuleSchedule1",
            "Arn"
          ]
        }
      }
    },
    "HolidaySearcherEventsRuleSchedule1": {
      "Type": "AWS::Events::Rule",
      "Properties": {
        "ScheduleExpression": "rate(1 day)",
        "State": "ENABLED",
        "Targets": [
          {
            "Arn": {
              "Fn::GetAtt": [
                "HolidaySearcherLambdaFunction",
                "Arn"
              ]
            },
            "Id": "holidaySearcherSchedule"
          }
        ]
      }
    },
    "HolidaySearcherLambdaPermissionEventsRuleSchedule1": {
      "Type": "AWS::Lambda::Permission",
      "Properties": {
        "FunctionName": {
          "Fn::GetAtt": [
            "HolidaySearcherLambdaFunction",
            "Arn"
          ]
        },
        "Action": "lambda:InvokeFunction",
        "Principal": "events.amazonaws.com",
        "SourceArn": {
          "Fn::GetAtt": [
            "HolidaySearcherEventsRuleSchedule1",
            "Arn"
          ]
        }
      }
    },
    "CWLSubFilterHolidayFetcherLogGroupUsEast1": {
      "Type": "AWS::Logs::SubscriptionFilter",
      "Properties": {
        "DestinationArn": "arn:aws:logs:us-east-1:802587217904:destination:11b02d18-917d-4c95-ae96-24d1948171dc#NXH2bWnMJ97v7ZG6FH#world-holidays#dev",
        "FilterPattern": "?\"REPORT RequestId: \" ?\"SERVERLESS_ENTERPRISE\"",
        "LogGroupName": {
          "Ref": "HolidayFetcherLogGroup"
        }
      }
    },
    "CWLSubFilterHolidaySearcherLogGroupUsEast1": {
      "Type": "AWS::Logs::SubscriptionFilter",
      "Properties": {
        "DestinationArn": "arn:aws:logs:us-east-1:802587217904:destination:11b02d18-917d-4c95-ae96-24d1948171dc#NXH2bWnMJ97v7ZG6FH#world-holidays#dev",
        "FilterPattern": "?\"REPORT RequestId: \" ?\"SERVERLESS_ENTERPRISE\"",
        "LogGroupName": {
          "Ref": "HolidaySearcherLogGroup"
        }
      }
    }
  },
  "Outputs": {
    "ServerlessDeploymentBucketName": {
      "Value": {
        "Ref": "ServerlessDeploymentBucket"
      },
      "Export": {
        "Name": "sls-world-holidays-dev-ServerlessDeploymentBucketName"
      }
    },
    "EnterpriseLogAccessIamRole": {
      "Value": {
        "Fn::GetAtt": [
          "EnterpriseLogAccessIamRole",
          "Arn"
        ]
      },
      "Export": {
        "Name": "sls-world-holidays-dev-EnterpriseLogAccessIamRole"
      }
    },
    "HolidayFetcherLambdaFunctionQualifiedArn": {
      "Description": "Current Lambda function version",
      "Value": {
        "Ref": "HolidayFetcherLambdaVersionyPK2vMk0BoTsaaaNi9BkCFdxMLKRERH8NlGN0rCRT2M"
      },
      "Export": {
        "Name": "sls-world-holidays-dev-HolidayFetcherLambdaFunctionQualifiedArn"
      }
    },
    "HolidaySearcherLambdaFunctionQualifiedArn": {
      "Description": "Current Lambda function version",
      "Value": {
        "Ref": "HolidaySearcherLambdaVersionqPLWjxR3fGivovq9woVfCqYPktNeZoumPDX2rqo"
      },
      "Export": {
        "Name": "sls-world-holidays-dev-HolidaySearcherLambdaFunctionQualifiedArn"
      }
    }
  }
}